<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="112dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/round_bg"
    android:backgroundTint="@color/background_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/IVDish"
        android:layout_width="112dp"
        android:layout_height="112dp"
        tools:src="@drawable/souce_image"
        android:scaleType="center"
        android:background="@color/common_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TVTitle"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        tools:text="Ao Molho"
        app:layout_constraintStart_toEndOf="@id/IVDish"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color_dark"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TVDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/TVTitle"
        app:layout_constraintStart_toStartOf="@id/TVTitle"
        android:layout_marginTop="8dp"
        tools:text="MacarrÃ£o ao molho branco, fughi e cheiro verde das montanhas."
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TVReal"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVDescription"
        app:layout_constraintStart_toStartOf="@id/TVDescription"
        android:textColor="@color/common_green"
        android:textSize="20dp"
        android:text="R$"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TVPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="19,90"
        app:layout_constraintTop_toTopOf="@id/TVReal"
        app:layout_constraintStart_toEndOf="@id/TVReal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/common_green"
        />


</androidx.constraintlayout.widget.ConstraintLayout>